                <input type="text" name="tipoDeProblema" placeholder="Ingrese el tipo de Problema">
                
                <label>Direccion</label>                
                <input type="text" name="direccion" id="direccion" placeholder="Ingrese la direccion">
                <input type="hidden" name="longitud" id="longitud" >
                <input type="hidden" name="latitud" id="latitud" > 

                <label>Descripcion</label>
                <input type="text" name="descripcion" placeholder="Ingrese la descripcion">
                
